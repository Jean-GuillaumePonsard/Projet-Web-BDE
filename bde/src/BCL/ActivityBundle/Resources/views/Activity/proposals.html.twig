{% extends "BCLActivityBundle::activityBundle.html.twig" %}

{% block title %}
 	Proposal
{% endblock %}
	
{% block activity %}
	<div class="row">
		<h1 class="col-md-12 board-title">Proposal</h1>
	</div>

	{% for activity in proposals %}
		<div class="row">
				<article class="col-xs-10 col-xs-offset-1 activity-article">
					<div class="row" >
						<div class="col-md-2 " >
							<h2 class=" user-name">{{activity.userCreator.firstName}} {{activity.userCreator.lastName}}</h2>
						</div>
						<div class="col-md-10 description">
							<h2 class="col-md-12 description-title">{{ activity.nameActivityIdea }}</h2>
							<p class="col-md-12">{{ activity.descriptionActivityIdea }}
							</p>
						</div>
					</div>
					<button class="row col-md-2 col-md-offset-10 btn btn-primary" onclick="window.location='{{ path('bcl_activity_proposal',{'id': activity.id}) }}'">more</button>
				</article>
		</div>
	{% endfor %}
	<div>
		<button class="row col-md-2 col-md-offset-5 btn btn-primary" onclick="{#{{ path() }}#}">New Proposal</button>
	</div>
	<div class="row col-sm-6 col-md-offset-3 shop-pagination">
        {% if nbPages != 0 %}
			<ul class="pagination">
				<li><a href="#" class="page-selector">&laquo;</a></li>
                {% for p in range(1, nbPages) %}
					<li class="{% if p == page %}active{% endif %}">
						<a href="{{ path('bcl_activity_pastActivities', {'page': p}) }}" class="page-selector">{{ p }}</a>
					</li>
                {% endfor %}
				<li><a href="#"	class="page-selector">&raquo;</a></li>
			</ul>
        {% endif %}
	</div>
{% endblock %}