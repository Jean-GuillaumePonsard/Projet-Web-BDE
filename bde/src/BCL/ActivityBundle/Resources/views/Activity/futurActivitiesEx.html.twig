{% extends "BCLActivityBundle::activityBundle.html.twig" %}

{% block title %}
    Future Activities Example
{% endblock %}

{% block activity %}
    <div class="row">
        <article class="col-xs-10 col-xs-offset-1 activity-exemple-article">
            <div class="row activity-exemple-block">
                <div class="col-md-4 activity-exemple-part" >
                    <img src="{{ futureActivity.urlPicture }}" alt="activity presentation" class="img-responsive img-activity-exemple">
                </div>
                <div class="col-md-8 ">
                    <h2 class="col-md-12 description-title">{{ futureActivity.name }}</h2>
                    <p class="col-md-12 ">{{ futureActivity.description }}
                    </p>
                </div>
            </div>
            {% if b == 1 %}
            <div class="row date-proposal-block">
                <div class="col-md-4 col-md-push-8 date-proposal-part ">

                    <div class="row date-proposal-block">
                        <h3>Date Proposal</h3>
                        <form>
                            <div class="checkbox">
                                <label><input type="checkbox" value="">Date 1</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="">Date 2</label>
                            </div>
                            <input type="button" name="Submit" value="Submit" class="row col-md-4 col-md-offset-8 row col-xs-10 col-xs-offset-1 btn btn-primary"/>
                        </form>
                    </div>

                </div>
                <div class="col-md-4 col-md-pull-4 back-button-block">
                    <a href="{{ path('bcl_activity_futuractivities',{'page': 1}) }}" class="btn btn-default">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        Back to Futur Activities
                    </a>
                </div>

            </div>
            {% endif %}

            {% if b == 2 %}
                <div class="row col-md-12 col-md-offset-1 back-button-block2">
                    <div class="col-md-4">
                        <a href="{{ path('bcl_activity_futuractivities',{'page': 1}) }}" class="btn btn-default">
                            <i class="glyphicon glyphicon-chevron-left"></i>
                            Back to Futur Activities
                        </a>
                    </div>
                    <input type="submit" name="subscribe" value="subscribe" class="col-md-2 col-md-offset-4 btn btn-primary">
                </div>
            {% endif %}
        </article>
    </div>


{% endblock %}
