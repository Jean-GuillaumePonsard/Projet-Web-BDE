{% extends "BCLActivityBundle::activityBundle.html.twig" %}

{% block title %}
    Past Activities Example
{% endblock %}

{% block activity %}

    <div class="row">
        <article class="col-xs-10 col-xs-offset-1 activity-exemple-article">
            <div class="row activity-exemple-block" >
                <div class="col-md-2 activity-exemple-part" >
                    <img src="{{ pastActivity.urlPicture }}" alt="activity presentation" class="img-responsive img-activity-exemple">
                </div>
                <div class="col-md-8">
                    <h2 class="col-md-12 description-title">{{ pastActivity.name }}</h2>
                    <h3 class="col-md-12 "></h3>
                    <p class="col-md-12">{{ pastActivity.description }}
                    </p>
                </div>
            </div>
        </article>
    </div>
    <div class="row gallery-block">
        <article class="col-xs-10 col-xs-offset-1">
            <div class="row gallery-block">
                <h1 class="col-md-12 gallery-title">Gallery</h1>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row" >
                        <img  class="col-xs-12 img-responsive img-gallery" src="http://img1.bonnesimages.com/bi/swag/swag_006.gif" alt="first-gallery-img">
                    </div>
                    <div class="comment-block">
                        <div class="row">
                            <p class="col-xs-3">23 Likes</p>
                            <p class="col-xs-3 col-xs-offset-6">2 comments</p>
                        </div>

                        <div class="row">
                            <div class="col-xs-2 like-part"><button class="like">like</button></div>
                            {# form #}
                        </div>
                    </div>
                </div>
                <div class="col-md-6 activity-exemple-block">
                    {% if images !=0 %}
                    {% for Picture in images %}
                        <div class="row gallery-block">
                            <div class="col-xs-3">
                                <img src="{{ Picture.urlPicture }}" alt="Picture name" class="img-responsive img-gallery" />
                            </div>
                        </div>
                    {% endfor %}
                    {% endif %}
                    <div class="row col-sm-6 col-md-offset-3 shop-pagination">
                        <ul class="pagination">
                            <li><a href="#" class="page-selector">&laquo;</a></li>
                            <li><a href="#" class="page-selector">1</a></li>
                            <li><a href="#" class="page-selector">2</a></li>
                            <li><a href="#" class="page-selector">3</a></li>
                            <li><a href="#"	class="page-selector">&raquo;</a></li>
                        </ul>
                    </div>
                    <div class="row add-img-part">
                        <div class="col-xs-5 col-xs-offset-7">
                            <input type="file" class="form-control-file">
                        </div>
                    </div>
                </div>
                <div>
                    {# form #}
                    <div class="col-md-4 col-md-pull-4 back-button-block">
                        <a href="{#{{ path() }}#}" class="btn btn-default">
                            <i class="glyphicon glyphicon-chevron-left"></i>
                            Back to Past Activities
                        </a>
                    </div>
                </div>
            </div>
        </article>
    </div>
{% endblock %}
