{% extends "BCLActivityBundle::activityBundle.html.twig" %}

{% block title %}
 	Proposal
{% endblock %}
	
{% block activity %}
	<div class="row">
		<h1 class="col-md-12 board-title">Future Activities</h1>
	</div>

	{% for activity in proposal %}
		<div class="row">
				<article class="col-xs-10 col-xs-offset-1 activity-article">
					<div class="row" >
						<div class="col-md-2 " >
							<h2 class=" user-name">activity.user</h2>
						</div>
						<div class="col-md-10 description">
							<h2 class="col-md-12 description-title">{{ activity.name }}</h2>
							<p class="col-md-12">{{ activity.description }}
							</p>
						</div>
					</div>
					<button class="row col-md-2 col-md-offset-10 btn btn-primary" onclick="window.location='{{ path() }}'">more</button>
				</article>
		</div>
	{% endfor %}
	<div>
