{% extends "::layout.html.twig" %}
{% block title %}
    New Article
{% endblock %}
{% block body %}
    <div class="row">
    <section class="col-md-6 col-md-offset-3 profil-section essai">
        <article class="row profil-article">
            <h1 class="col-md-10 col-md-offset-1 proposalform-title">Article Form</h1>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {# Les erreurs générales du formulaire. #}
                {{ form_errors(form) }}

            <form class="form-group ">
                    <div class=" row col-md-6 col-md-offset-3 proposalform-part2">
                        <div>
                            {{ form_label(form.name, "Article Name") }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control activity-info1'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.description, "Description") }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control activity-info1', 'rows': '6'}}) }}
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                {{ form_label(form.price, "Price") }}
                                {{ form_widget(form.price, {'attr': {'class': 'form-control activity-date-info'}}) }}
                            </div>
                        </div>
                        <div>
                        <label class="custom-file" >
                            {{ form_label(form.urlPicture, "Url of the article Picture") }}
                            {{ form_widget(form.urlPicture, {'attr': {'class' : 'custom-file-input'}}) }}
                            <span class="custom-file-control"></span>
                        </label>
                        </div>
                        <div>
                            {{ form_widget(form.validate, {'attr': {'class': 'btn btn-primary' }}) }}
                        </div>
                    </div>
            </form>
            {{ form_end(form) }}
       </article>
    </section>
    </div>
{% endblock %}