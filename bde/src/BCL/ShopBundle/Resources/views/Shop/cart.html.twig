{% extends "::layout.html.twig" %}

{% block title %}
 	Cart
{% endblock %}

{% block body %}
	<div class="row" >
		<section class="col-md-10 col-md-offset-1 cart-section essai">
			<article class="col-md-10 col-md-offset-1">
				<h1 class="col-md-12 cart-title">Cart</h1>
				<table class="table table-bordered">
				<thead>
					<tr>
						<th class="cart-info">Product</th>
						<th class="cart-info">Description</th>
						<th class="cart-info">Quantity</th>
						<th class="cart-info">Price €</th>
					</tr>
				</thead>
				<tbody>
				{% set totalprice = 0 %}
				{% for article in cartArticles %}
					<tr>
						<td>{{ article.article.name }}</td>
						<td>{{ article.article.description }}</td>
						<td>{{ article.quantity }}</td>
						<td>{{ article.article.price }}</td>
					</tr>
					{% set totalprice = totalprice + article.article.price %}
                {% endfor %}
            </tbody>
            </table>
            <div class="col-md-2 col-md-offset-10">
            Total: {{ totalprice }} €
            {# form #}
				</div>

			</article>
		</section>
	</div>
{% endblock %}