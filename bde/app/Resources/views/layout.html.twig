<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{% block title %}{% endblock %}</title>
	{% block stylesheets %}
		<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="styleEssai.css">
	{% endblock %}
</head>
<body>

	<div class="container-fluid body">

		<header class="navbar navbar-default navbar-fixed-top" >
			<nav class="container">
				<div class="nav navbar-header" >
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainMenu" aria-expanded="false" aria-controls="navbar" style="">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
					</button>
					<div class="nav navbar-brand" >
						<img src="../images/LogoBDE.png" alt="BDE Logo" class="img-responsive BDE-image"  />
						<span style="">BDE Website</span>
					</div>
				</div>
				<div id="mainMenu" class="navbar-collapse">
					<ul class="nav navbar-nav navbar-left">
						<li class="a"><a href="#">Home</a></li>
						<li><a href="">Activities</a></li>
						<li><a href="">Shop</a></li>
						<li><a href="">BDE Members</a></li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						{% if user %}
							<li><a href="{{ path() }}"><span class="glyphicon glyphicon-shopping-cart"></a></li>
							<li><a href="{{ path() }}">Log out</a></li>
							<li><a href="{{ path() }}">Profil</a></li>
						{% else %}
							<li><a href="{{ path() }}">Log in</a></li>
							<li><a href="{{ path() }}">Sign up</a></li>
						{% endif %}
						<li><a href="">FR</a></li>
						<li><a href="">EN</a></li>
					</ul>
				</div>
			</nav>
		</header>

		{% block body %}
		{% endblock %}}

		<footer class="footer">
			<div class="container-fluid">
				<div class="row">
					<p class="col-sm-3">
						Lorem ipsum dolor sit amet, consectetur adipisicing elit.
					</p>
					<p class="col-sm-3"><a href="{{ path() }}"><img src="../images/justice-logo.png " alt="legal notices" class="img-responsive"/>Legal Notices</a></p>
					<p class="col-sm-3"><a href="{{ path() }}" ><img src="../images/logo-email.png " alt="contact" class="img-responsive" /> Contact</a></p>
					<p class="col-sm-3"><a href="{{ path() }}" ><img src="../images/facebook.png" alt="facebook" class="img-responsive" /></a></p>
				</div>
			</div>
		</footer>
	</div>
	{% block javascripts %}
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		<script type="text/javascript">
			$(window).resize(function () { 
			   $('body').css('padding-top', parseInt($('header').css("height")));
			   //$('body').css('margin-bottom', parseInt($('.footer').css("height")));
			});

			$(window).ready(function () { 
			   $('body').css('padding-top', parseInt($('header').css("height"))); 
			  //$('body').css('margin-bottom', parseInt($('.footer').css("height")));        
			});
		</script>
	{% endblock %}}
</body>
</html>