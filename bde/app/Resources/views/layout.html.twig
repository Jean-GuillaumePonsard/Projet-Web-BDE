<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{% block title %}{% endblock %}</title>
	{% block stylesheets %}
		<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
	{% endblock %}
</head>
<body>
<header class="navbar navbar-default navbar-fixed-top" >
	<nav class="container">
		<div class="nav navbar-header" >
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainMenu" aria-expanded="false" aria-controls="navbar">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<div class="nav navbar-brand" >
				<img src="{{ asset('images/LogoBDE.png') }}" alt="BDE Logo" class="img-responsive BDE-image"  />
				<span style="">BDE Website</span>
			</div>
		</div>
		<div id="mainMenu" class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-left">
				<li class="a"><a href="#">Home</a></li>
				<li><a href="">Activities</a></li>
				<li><a href="">Shop</a></li>
				<li><a href="">BDE Members</a></li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
                {% if user %}
					<li><a href="{# {{ path() }} #}"><span class="glyphicon glyphicon-shopping-cart"></a></li>
					<li><a href="{# {{ path() }} #}">Log out</a></li>
					<li><a href="{# {{ path() }} #}">Profil</a></li>
                {% else %}
					<li><a href="{# {{ path() }} #}">Log in</a></li>
					<li><a href="{# {{ path() }} #}">Sign up</a></li>
                {% endif %}
				<li><a href="">FR</a></li>
				<li><a href="">EN</a></li>
			</ul>
		</div>
	</nav>
</header>
	<div class="container-fluid body">



		{% block body %}
		{% endblock %}}

		<footer class="footer">
	<div class="container-fluid">
		<div class="row">
			<p class="col-sm-2">
				<a class="footer-color" href="https://www.google.com/maps/place/19+Avenue+Guy+de+Collongue,+69130+Ã‰cully,+France/@45.783385,4.763146,17">19 Guy de Collongue Avenue, Ecully 69130 France.</a>
			</p>
			<p class="col-sm-3"><a href="{# {{ path() }} #}"><img src="{{ asset('images/justice-logo.png') }} " alt="legal notices" class="img-responsive legal-notices"/>Legal Notices</a></p>
			<p class="col-sm-3"><a href="{# {{ path() }} #}" ><img src="{{ asset('images/logo-email.png') }} " alt="contact" class="img-responsive contact" /> Contact</a></p>
			<img src="{{ asset('images/logoExia.png') }}" alt="logoExia" class="col-sm-2 img-responsive logoExia">
			<img src="{{ asset('images/logoEI2.png') }}" alt="logoEI" class="col-sm-1 img-responsive logoEI">
			<p class="col-sm-3"><a href="https://www.facebook.com/BDECesiLyon/" ><img src="{{ asset('images/facebook.png') }}" alt="facebook" class="img-responsive facebook" /></a></p>
		</div>
	</div>
</footer>
</div>
	{% block javascripts %}
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		<script type="text/javascript">
            $(function(){
                var taille = $(".body").height() ;
                var tf = $(".footer").height();
                var th = $("header").height();
                var resultat = taille - tf -th;
                $(".essai").css('min-height', resultat- 16) ;
            });
            $(window).resize(function () {
                $('body').css('padding-top', parseInt($('header').css("height")));
            });

            $(window).ready(function () {
                $('body').css('padding-top', parseInt($('header').css("height")));
            });
		</script>
	{% endblock %}
</body>
</html>